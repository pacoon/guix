#. type: item
#: doc/guix.texi:18838
#, no-wrap
msgid "@code{ssl-key} (default: @code{#f})"
msgstr "@code{ssl-key} (predeterminada: @code{#f})"

#. type: table
#: doc/guix.texi:18840
