#, no-wrap
msgid "guix import cran --archive=git https://github.com/immunogenomics/harmony\n"
msgstr "guix import cran --archive=git https://github.com/immunogenomics/harmony\n"

#. type: item
#: doc/guix.texi:9138
#, no-wrap
msgid "texlive"
