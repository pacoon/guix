#. type: subsubheading
#: doc/guix.texi:21731
#, no-wrap
msgid "Dnsmasq Service"
msgstr "Servicio Dnsmasq"

#. type: deffn
#: doc/guix.texi:21733
#, no-wrap
msgid "{Scheme Variable} dnsmasq-service-type"
msgstr "{Variable Scheme} dnsmasq-service-type"

