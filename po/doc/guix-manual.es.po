msgid "@code{name} (default: @code{\"MPD\"})"
msgstr "@code{name} (predeterminado: @code{\"MPD\"})"

#. type: table
#: doc/guix.texi:23188
msgid "The name of the audio output."
msgstr "Nombre de la salida de audio."

