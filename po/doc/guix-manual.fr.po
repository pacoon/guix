#. type: item
#: doc/guix.texi:13026
#, no-wrap
msgid "@code{lock-file} (default: @code{\"/var/run/rsyncd/rsyncd.lock\"})"
msgstr "@code{lock-file} (par défaut : @code{\"/var/run/rsyncd/rsyncd.lock\"})"

#. type: table
#: doc/guix.texi:13028
msgid "Name of the file where @command{rsync} writes its lock file."
