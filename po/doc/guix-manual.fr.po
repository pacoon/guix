#. type: item
#: doc/guix.texi:13029
#, no-wrap
msgid "@code{log-file} (default: @code{\"/var/log/rsyncd.log\"})"
msgstr "@code{log-file} (par défaut : @code{\"/var/log/rsyncd.log\"})"

#. type: table
#: doc/guix.texi:13031
